---
import Layout from '../layouts/Layout.astro'
---

<script>
  const form: HTMLFormElement = document.getElementById(
    'ogForm',
  ) as HTMLFormElement
  const input: HTMLInputElement = document.getElementById(
    'ogInput',
  ) as HTMLInputElement

  const submit = (event) => {
    event.preventDefault()
    window.location.href = `/api/og-image?title=${input.value}`
  }
  form.addEventListener('submit', submit)
</script>

<Layout title="OG Image Generation Example">
  <main>
    <h1><span class="text-gradient">OG Image Generation Example</span></h1>
    <p class="box">
      <strong>Blog post:</strong><br />
      <strong>GitHub:</strong>&nbsp;
      <a href="https://github.com/ehowey/og-images-demo"
        >https://github.com/ehowey/og-images-demo</a
      >
    </p>
    <form id="ogForm" class="box">
      <label for="ogInput"><strong>Text for open graph image</strong></label><br
      />
      <input
        type="text"
        id="ogInput"
        name="ogInput"
        placeholder="I am awesome"
        required
        class="input"
      /><br /><br />
      <button name="ogSubmit" type="submit" class="submit">View image</button>
    </form>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .box {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .box strong {
    color: rgb(var(--accent));
  }

  .submit {
    display: inline-block;
    outline: none;
    cursor: pointer;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 0.2rem;
    padding: 8px 12px;
    border: none;
    background: linear-gradient(
      to right,
      rgb(230, 30, 77) 0%,
      rgb(227, 28, 95) 50%,
      rgb(215, 4, 102) 100%
    );
    color: #fff;
  }
  .input {
    padding: 0.25rem 0.5rem;
    border: 2px solid #ccc;
    border-radius: 0.2rem;
    font-size: 1rem;
    width: 250px;
    color: #3f3f46;
  }
</style>
